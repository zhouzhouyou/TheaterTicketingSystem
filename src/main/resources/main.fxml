<StackPane fx:id="stack" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
   <children>
      <BorderPane fx:id="mainPane" minHeight="800.0" minWidth="800.0" prefHeight="800.0" prefWidth="800.0">
         <bottom>
            <HBox prefHeight="27.0" prefWidth="800.0" BorderPane.alignment="CENTER">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Current Number: " />
                  <Text fx:id="current_number" strokeType="OUTSIDE" strokeWidth="0.0" />
               </children>
            </HBox>
         </bottom>
         <top>
            <BorderPane fx:id="topPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <bottom>
                  <AnchorPane minHeight="34.0" prefHeight="34.0" prefWidth="800.0" BorderPane.alignment="CENTER">
                     <children>
                        <JFXButton layoutX="732.0" layoutY="6.0" onAction="#start" stylesheets="@main.css" text="Start" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="16.0" />
                        <JFXButton layoutX="634.0" layoutY="5.0" onAction="#clear" styleClass="clear_button" stylesheets="@main.css" text="Clear" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="80.0" />
                     </children>
                  </AnchorPane>
               </bottom>
            </BorderPane>
         </top>
      </BorderPane>
   </children>
</StackPane>
